{
    "compilerOptions": {
      "target": "ES2022",
      "module": "nodenext",
      "moduleResolution": "node16",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDirs": ["./src"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }